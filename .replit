modules = ["nodejs-20", "web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
DB_NAME = "chezloman"
REACT_APP_BACKEND_URL = ""

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && python3 -m uvicorn backend.server:app --host localhost --port 8001 & cd /home/runner/workspace/frontend && BROWSER=none PORT=5000 HOST=0.0.0.0 npx craco start"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 8001
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd /home/runner/workspace && python3 -m uvicorn backend.server:app --host 0.0.0.0 --port 5000"]
build = ["bash", "-c", "cd /home/runner/workspace/frontend && npm run build"]
